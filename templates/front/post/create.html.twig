{% extends 'front/layout.html.twig' %}

{% block title %}
	Mes publications
{% endblock %}
{% block description %}{% endblock %}

{% block content %}
	<style>
		img {
			width: 100%;
			height: 100%;
		}
	</style>
	<div class="container">
		<h1>Gestion d'une annonces</h1>

		<div class="row justify-content-center">

			<div class="col-md-8">
				{{ form_start(form) }}
				{{ form_row(form.title) }}
				{{ form_row(form.description) }}
				{{ form_row(form.price) }}
				{{ form_row(form.location) }}
				<div style="max-width: 100%;">
					{{ form_row(form.imageFile) }}

				</div>
				{{ form_widget(form) }}
				<div class="text-center">
					<button class="btn btn-primary">
						Enregister
					</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>

	</div>


{% endblock %}
